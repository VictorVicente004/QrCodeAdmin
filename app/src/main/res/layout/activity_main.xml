<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
<TextView
    android:id="@+id/txtInicio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="APP Administrador"
    android:textSize="34dp"
    android:textColor="@color/white"
    android:background="@color/black"
    android:textAlignment="center"
    android:layout_below="@+id/spacer"/>


<EditText
    android:id="@+id/nomeEvento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nome do Evento:"
    android:layout_below="@id/txtInicio"/>

    <EditText
        android:id="@+id/nomeParticipante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do convidado:"
        android:layout_below="@+id/nomeEvento"/>

<EditText
    android:id="@+id/detalheEvento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Detalhes do Evento:"
    android:layout_below="@id/nomeParticipante"/>

    <Button
        android:id="@+id/btnGerarCodigo"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="Gerar QrCode"
        android:layout_below="@id/detalheEvento"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/ivQrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGerarCodigo"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:contentDescription="QR Code"/>



</RelativeLayout>

