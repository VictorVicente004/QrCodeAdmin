<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
<TextView
    android:id="@+id/txtInicio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="APP Administrador"
    android:textSize="34dp"
    android:textColor="@color/white"
    android:background="@color/black"
    android:textAlignment="center"
    android:layout_below="@+id/spacer"/>


<EditText
    android:id="@+id/nomeEvento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nome do Evento:"
    android:layout_below="@id/txtInicio"/>

    <EditText
        android:id="@+id/nomeParticipante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do convidado:"
        android:layout_below="@+id/nomeEvento"/>

<EditText
    android:id="@+id/detalheEvento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Detalhes do Evento:"
    android:layout_below="@id/nomeParticipante"/>

    <EditText
        android:id="@+id/dataEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data: "
        android:layout_below="@id/detalheEvento"
        android:inputType="date"/>


    <EditText
        android:id="@+id/localEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Local: "
        android:layout_below="@id/dataEvento"
        />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Enviar Convite"
        android:layout_below="@id/localEvento"
        android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/btnScanner"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Escanear Convite"
        android:layout_below="@id/btnEnviar"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>

